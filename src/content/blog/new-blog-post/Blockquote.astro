---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<blockquote class={`custom-blockquote ${className}`}>
  <slot />
</blockquote>

<style>
  .custom-blockquote {
    border-left: 4px solid #3b82f6;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: #f8fafc;
    font-style: italic;
    border-radius: 0 8px 8px 0;
  }
  
  .custom-blockquote :global(p) {
    margin: 0;
  }
</style>
