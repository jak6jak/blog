---
export interface Props {
  title: string;
  subtitle: string;
  description: string;
  tags: string[];
  gradientColor: string;
  accentColor: string;
  projectSlug: string;
  externalUrl?: string;
  externalButtonText?: string;
}

const { 
  title, 
  subtitle, 
  description, 
  tags, 
  gradientColor, 
  accentColor, 
  projectSlug, 
  externalUrl, 
  externalButtonText = "View Project →" 
} = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow">
  <div class={`bg-gradient-to-br ${gradientColor} p-8 text-white`}>
    <h3 class="text-2xl font-bold mb-3">{title}</h3>
    <p class="text-white/90 mb-4">{subtitle}</p>
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="bg-white/20 px-3 py-1 rounded-full text-sm">{tag}</span>
      ))}
    </div>
  </div>
  <div class="p-6">
    <div class="flex gap-3">
      <a href={`/projects/${projectSlug}`} 
         class={`${accentColor} hover:opacity-80 font-medium inline-flex items-center gap-2`}>
        Learn More →
      </a>
      {externalUrl && (
        <a href={externalUrl} target="_blank" 
           class="text-green-600 hover:text-green-800 font-medium inline-flex items-center gap-2">
          {externalButtonText}
        </a>
      )}
    </div>
  </div>
</div>
